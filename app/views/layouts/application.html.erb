<!DOCTYPE html>
<html>
  <head>
    <title>Alpha Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('ruby_icon.ico'), :rel => 'icon', :type => "image/x-icon" %>
    
    <%= render 'layouts/top_banner' %>

    
  </head>

  <body>
    <h1><%= image_tag("ruby_64x52.png" , alt: "Ruby Logo", id: "logo") %>Alpha Blog</h1>
    
  <%= render 'layouts/messages' %>
  <%= yield %>
  <%= render 'layouts/footer' %>
   
  </body>
</html>
