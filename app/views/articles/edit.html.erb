<div class="container">
<%= image_tag("banner_1280x100.jpg" , alt: "Coding banner", id: "topbanner") %>
<div class="top-left">Edit an existing article</div>
</div>

<% if @article.errors.any? %>
<h2>The following errors prevented the article from getting created:</h2>
<ul>
    <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @article do |f| %>

<p> 
  <%= f.label :title %>
  <br>
  <%= f.text_field :title %>
</p>
<p> 
  <%= f.label :description %>
  <br>
  <%= f.text_area :description %>
</p>
<p>
  <%= f.submit %>
</p>

<% end %>

<p><%= link_to "Back to articles listing", articles_path %> </p>